    extract,
    getConfig
  };
}

function getHash(input, length = 8) {
  return crypto.createHash("sha256").update(input).digest("hex").slice(0, length);
}
function getPath(id) {
  return id.replace(/\?.*$/, "");
}

function ChunkModeBuildPlugin({ uno, filter }) {
  let cssPlugin;
