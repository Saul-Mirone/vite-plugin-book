const calculateClassName = (pos) => {
  switch (pos) {
    case ToolTipPos.Left: {
      return "milkdown-cell-left";
    }
    case ToolTipPos.Top: {
      return "milkdown-cell-top";
    }
    case ToolTipPos.Point:
    default: {
      return "milkdown-cell-point";
    }
  }
