const heading = createNode((utils) => {
  const id2 = "heading";
  const style = (level) => utils.getStyle((_, { css }) => {
    const headingMap = {
      1: css`
                    font-size: 3rem;
                    line-height: 3.5rem;
                `,
      2: css`
                    font-size: 2.5rem;
                    line-height: 3rem;
                `,
      3: css`
                    font-size: 2.125rem;
                    line-height: 2.25rem;
                `,
      4: css`
