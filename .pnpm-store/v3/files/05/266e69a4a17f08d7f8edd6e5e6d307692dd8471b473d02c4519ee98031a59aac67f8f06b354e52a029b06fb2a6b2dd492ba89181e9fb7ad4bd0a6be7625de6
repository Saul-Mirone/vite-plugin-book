        },
        level: {
          default: 1
        }
      },
      parseDOM: headingIndex.map((x) => ({
        tag: `h${x}`,
        getAttrs: (node) => {
          if (!(node instanceof HTMLElement)) {
            throw new Error();
          }
          return { level: x, id: node.id };
        }
      })),
