{
    "name": "@vite-plugin-book/monorepo",
    "private": "true",
    "description": "A vite plugin to help you write a book.",
    "scripts": {
        "postinstall": "husky install",
        "format": "lint-staged",
        "build": "pnpm --filter=vite-plugin-book build",
        "test:tsc": "pnpm --filter=vite-plugin-book tsc",
        "changeset": "changeset",
        "release": "changeset publish",
        "commit": "git-cz",
        "dev": "pnpm --filter=vite-plugin-book dev",
        "doc": "pnpm --filter=gh-pages start"
    },
    "keywords": [
        "vite-plugin"
    ],
    "author": "Saul-Mirone",
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.19.0",
        "@commitlint/cli": "^19.0.0",
        "@commitlint/config-conventional": "^19.0.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "concurrently": "^9.0.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^7.0.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-tsdoc": "^0.3.0",
        "git-cz": "^4.7.6",
        "husky": "^9.0.0",
        "lint-staged": "^15.0.0",
        "prettier": "^3.0.0",
        "prettier-plugin-tailwindcss": "^0.6.0",
        "rimraf": "^6.0.0",
        "rollup": "^4.0.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-dts": "^6.0.0",
        "rollup-plugin-esbuild": "^6.0.0",
        "typescript": "^5.0.0",
        "vite": "^4.0.0",
        "vite-plugin-dts": "^4.0.0"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@babel/core",
                "esbuild"
            ]
        },
        "allowedVersions": {
            "react": "17"
        }
    }
}
